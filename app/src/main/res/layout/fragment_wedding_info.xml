<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_own_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffd4d4"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="20dip"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/groom_and_bride"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/engage_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/engage_string"
                android:textColor="@android:color/holo_red_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/engage_time"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engage_time" />

            <Button
                android:id="@+id/engage_place"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engage_place" />

            <Button
                android:id="@+id/engage_address"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/engage_address" />

            <TextView
                android:id="@+id/marry_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/marry_string"
                android:textColor="@android:color/holo_red_light"
                android:textSize="30sp" />

            <Button
                android:id="@+id/marry_time"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marry_time" />

            <Button
                android:id="@+id/marry_place"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marry_place" />

            <Button
                android:id="@+id/marry_address"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/marry_address" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>