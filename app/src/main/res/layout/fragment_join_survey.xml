<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="0dp"
                android:stretchColumns="*">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/real_name" />

                        <EditText
                            android:id="@+id/survey_name_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/contact_phone" />

                        <EditText
                            android:id="@+id/survey_phone_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="phone" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/attend_survey" />

                        <Switch
                            android:id="@+id/survey_attend_switch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/attend"
                            android:checked="true"
                            android:gravity="left"
                            android:layout_marginLeft="16dp" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/i_am" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/groom"
                            android:id="@+id/groom_radio_button"
                            android:layout_weight="1.5" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/bride"
                            android:id="@+id/bride_radio_button"
                            android:layout_weight="1.5" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/s_friend" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/wedding_session_layout">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:text="@string/attend_activity" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/engage"
                            android:id="@+id/engage_radio_button"
                            android:layout_weight="1.5" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/marry"
                            android:id="@+id/marry_radio_button"
                            android:layout_weight="1.5" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/dummy_text"
                            android:layout_weight="1" />
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_double_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2"
                            android:gravity="center_vertical"
                            android:text="@string/attend_people_count" />

                        <TextView
                            android:id="@+id/attend_people_count_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="@string/zero"
                            android:layout_gravity="center"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:text="@string/people"
                            android:gravity="center" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView10"
                                android:layout_weight="9.5"/>

                            <Button
                                android:id="@+id/attend_people_minus_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:background="@color/colorButtonBackground"
                                android:text="@string/minus"
                                android:textSize="20sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical|center" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView9"
                                android:layout_weight="9.5"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView13"
                            android:layout_weight="0.1" />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView11"
                                android:layout_weight="9.5" />
                            <Button
                                android:id="@+id/attend_people_add_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:background="@color/colorButtonBackground"
                                android:text="@string/add"
                                android:textSize="20sp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical|center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView12"
                                android:layout_weight="9.5" />
                        </LinearLayout>>
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_double_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7"
                            android:gravity="center_vertical"
                            android:text="@string/food_preference" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/meat" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/vegetarian" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/meat_count_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/zero" />

                            <TextView
                                android:id="@+id/vegetable_count_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/zero" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/people" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="@string/people" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView5"
                                android:layout_weight="1"/>

                            <Button
                                android:id="@+id/meat_minus_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:background="@color/colorButtonBackground"
                                android:text="@string/minus"
                                android:gravity="center_vertical|center"
                                android:textSize="20sp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView"
                                android:layout_weight="2" />

                            <Button
                                android:id="@+id/vegetable_minus_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:background="@color/colorButtonBackground"
                                android:text="@string/minus"
                                android:gravity="center_vertical|center"
                                android:textSize="20sp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView3"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView7"
                            android:layout_weight="0.1" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView6"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/meat_add_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:text="@string/add"
                                android:background="@color/colorButtonBackground"
                                android:gravity="center_vertical|center"
                                android:layout_gravity="center_vertical"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView2"
                                android:layout_weight="2" />

                            <Button
                                android:id="@+id/vegetable_add_button"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="15"
                                android:text="@string/add"
                                android:background="@color/colorButtonBackground"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                android:gravity="center_vertical|center"
                                android:singleLine="false"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:id="@+id/textView4"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </TableRow>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/survery_address" />
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/city_spinner"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown" />
                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/region_spinner"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:spinnerMode="dropdown" />
                    </TableRow>
                </LinearLayout>

                <EditText
                    android:id="@+id/survey_address_detail_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="@string/survey_address_detail_hint"
                    android:inputType="textPostalAddress" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/row_height"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/message_for_newly_wed" />

                        <EditText
                            android:id="@+id/survey_message_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:ems="10"
                            android:inputType="textLongMessage" />
                    </TableRow>
                </LinearLayout>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>